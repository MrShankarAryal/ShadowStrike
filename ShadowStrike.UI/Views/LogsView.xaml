<UserControl x:Class="ShadowStrike.UI.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#0D1117">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161B22" Padding="25,20" BorderBrush="#30363D" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History" Width="32" Height="32" Foreground="White" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Scan Logs" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="View and manage historical scan data" FontSize="14" Foreground="#8B949E" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshBtn" Content="Refresh" Width="100" Height="35" Margin="0,0,10,0"
                            Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" BorderThickness="1" Click="RefreshBtn_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="ClearAllBtn" Content="Clear All" Width="100" Height="35"
                            Background="#3E1B1B" Foreground="#FF7B72" BorderBrush="#6E2828" BorderThickness="1" Click="ClearAllBtn_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Log List -->
            <Border Grid.Column="0" BorderBrush="#30363D" BorderThickness="0,0,1,0" Background="#0D1117">
                <ListBox x:Name="LogsList" Background="Transparent" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="LogsList_SelectionChanged" Padding="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15,12" Margin="0,0,0,8" Background="#161B22" CornerRadius="6" BorderBrush="#30363D" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Target}" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="15"/>
                                    <TextBlock Text="{Binding DisplayDate}" Foreground="#8B949E" FontSize="12" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="true">
                                                <Setter Property="Background" TargetName="Bd" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" TargetName="Bd" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
            </Border>

            <!-- Preview / Action Area -->
            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="SelectionInfoPanel" Visibility="Collapsed">
                    <TextBlock x:Name="SelectedTargetText" Text="Target: example.com" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="SelectedDateText" Text="Scanned on: 2023-11-26 10:00:00" FontSize="14" Foreground="#8B949E" Margin="0,5,0,25"/>
                    
                    <Border Background="#161B22" Padding="20" CornerRadius="6" BorderBrush="#30363D" BorderThickness="1" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Scan Summary" FontWeight="SemiBold" Foreground="#C9D1D9" Margin="0,0,0,15" FontSize="16"/>
                            <TextBlock x:Name="SummaryText" Text="Loading..." Foreground="#8B949E" TextWrapping="Wrap" LineHeight="22"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="EmptyStatePanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Select a log to view details" Foreground="#8B949E" FontSize="16"/>
                </StackPanel>

                <Button x:Name="LoadBtn" Grid.Row="2" Content="Load into Dashboard" Height="40" 
                        Background="#238636" Foreground="White" BorderThickness="0" 
                        Click="LoadBtn_Click" Visibility="Collapsed" HorizontalAlignment="Left" Width="200" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2EA043"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
