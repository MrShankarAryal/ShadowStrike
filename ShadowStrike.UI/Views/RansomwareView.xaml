<UserControl x:Class="ShadowStrike.UI.Views.RansomwareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#0D1117">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: Controls & Configuration -->
        <Border Grid.Column="0" Background="#161B22" BorderBrush="#30363D" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="LockAlert" Width="32" Height="32" Foreground="White" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Web Ransomware" FontSize="24" FontWeight="Light" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Target Configuration -->
                    <Expander IsExpanded="True" Background="Transparent" BorderBrush="#30363D" BorderThickness="0,0,0,1">
                        <Expander.Header>
                            <TextBlock Text="CONFIGURATION" FontWeight="Bold" Foreground="#58A6FF"/>
                        </Expander.Header>
                        <StackPanel Margin="0,10,0,10">
                            <TextBox x:Name="TargetUrlBox" 
                                     materialDesign:HintAssist.Hint="Target URL (e.g., https://example.com)"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Foreground="White"
                                     Margin="0,0,0,15"/>

                            <ComboBox x:Name="AttackVectorComboBox"
                                      materialDesign:HintAssist.Hint="Attack Vector"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      SelectedIndex="0"
                                      Foreground="White" 
                                      Background="#161B22"
                                      BorderBrush="#30363D"
                                      Margin="0,0,0,15">
                                <ComboBox.Resources>
                                    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#161B22"/>
                                </ComboBox.Resources>
                                <ComboBoxItem Content="SQL Injection â†’ Database Encryption"/>
                                <ComboBoxItem Content="File Upload â†’ Web Shell"/>
                                <ComboBoxItem Content="RCE â†’ Server Encryption"/>
                                <ComboBoxItem Content="Defacement â†’ Ransom Page"/>
                                <ComboBoxItem Content="All Vectors (Sequential)"/>
                            </ComboBox>

                            <TextBlock Text="Evasion Level" Foreground="#8B949E" FontSize="11" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="EvasionSlider" 
                                        Minimum="0" 
                                        Maximum="3" 
                                        Value="2" 
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        Foreground="#58A6FF"/>
                                <TextBlock Grid.Column="1"
                                           x:Name="EvasionLevelText"
                                           Text="Medium" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#58A6FF"/>
                            </Grid>

                            <TextBlock Text="Low-and-Slow Delay (max)" Foreground="#8B949E" FontSize="11" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="DelaySlider" 
                                        Minimum="1" 
                                        Maximum="30" 
                                        Value="15" 
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        Foreground="#58A6FF"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding ElementName=DelaySlider, Path=Value, StringFormat={}{0}s}" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#58A6FF"/>
                            </Grid>
                        </StackPanel>
                    </Expander>



                    <!-- Actions -->
                    <TextBlock Text="ACTIONS" FontWeight="Bold" Foreground="#58A6FF" Margin="0,20,0,10"/>
                    
                    <Button x:Name="ExecuteButton" 
                            Content="ðŸ”¥ EXECUTE ATTACK"
                            Click="ExecuteButton_Click"
                            Margin="0,0,0,10"
                            Background="#DA3633" 
                            BorderThickness="0" 
                            FontWeight="Bold"
                            Height="40"/>
                    
                    <Button x:Name="StopButton" 
                            Content="â¹ STOP ATTACK"
                            Click="StopButton_Click"
                            Background="Transparent"
                            BorderBrush="#DA3633"
                            Foreground="#DA3633"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>

                    <!-- Stats -->
                    <Border Background="#21262D" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="STATUS" Foreground="#8B949E" FontSize="10"/>
                            <TextBlock x:Name="StatusText" Text="READY" Foreground="#3FB950" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#21262D" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="CURRENT VECTOR" Foreground="#8B949E" FontSize="10"/>
                            <TextBlock x:Name="CurrentVectorText" Text="None" Foreground="White" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- RIGHT COLUMN: Operation Log -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="OPERATION LOG" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,10"/>

            <Border Grid.Row="1" 
                    Background="#0D1117" 
                    BorderBrush="#30363D" 
                    BorderThickness="1" 
                    CornerRadius="5">
                <TextBox x:Name="LogOutput" 
                         Margin="10" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" 
                         TextWrapping="Wrap" 
                         FontFamily="Consolas"
                         FontSize="11"
                         Foreground="#3FB950"
                         Background="Transparent"
                         BorderThickness="0"
                         AcceptsReturn="True"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
