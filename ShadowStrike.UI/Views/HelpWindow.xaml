<Window x:Class="ShadowStrike.UI.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ShadowStrike - Help"
        Height="750" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#0D1117"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="Transparent"
        Icon="pack://application:,,,/ShadowStrike.UI;component/img/eagle.ico">
    <Window.Resources>
        <!-- Info Box Style -->
        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#161B22"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
        
        <!-- Warning Box Style -->
        <Style x:Key="WarningBox" TargetType="Border">
            <Setter Property="Background" Value="#1C1A00"/>
            <Setter Property="BorderBrush" Value="#9E6A03"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161B22" Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="ShadowStrike Help" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Complete guide for security testing and penetration testing" Foreground="#8B949E" FontSize="13" Margin="0,8,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Version 2.0" Foreground="#58A6FF" FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Text=".NET 8 Edition" Foreground="#8B949E" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <TabControl Grid.Row="1" Margin="0" TabStripPlacement="Left" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Foreground" Value="#8B949E"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="20,0"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="{TemplateBinding Background}" BorderThickness="0,0,0,0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Left" ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#1F6FEB"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#21262D"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- GETTING STARTED -->
            <TabItem Header="Getting Started">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="35,25">
                    <StackPanel MaxWidth="750">
                        <TextBlock Text="Getting Started with ShadowStrike" FontSize="24" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,10"/>
                        <TextBlock Text="A beginner's guide to security testing and penetration testing" Foreground="#8B949E" FontSize="13" Margin="0,0,0,20"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="What is ShadowStrike?" FontWeight="Bold" Foreground="White" FontSize="15" Margin="0,0,0,8"/>
                                <TextBlock Text="ShadowStrike is a comprehensive security testing tool designed for ethical hackers, penetration testers, and security researchers. It helps identify vulnerabilities in web applications and network infrastructure through automated scanning and testing." Foreground="#C9D1D9" TextWrapping="Wrap" LineHeight="22"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Basic Workflow" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,20,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Step 1: Reconnaissance (Dashboard)" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,8"/>
                                <TextBlock Text="• Navigate to the Dashboard tab" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• Enter your target URL or IP address (e.g., http://example.com)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• Click 'Analyze Target' to gather intelligence" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                <TextBlock Text="What happens: The tool will scan for open ports, identify web technologies, check SSL certificates, gather DNS records, and detect security measures like firewalls." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Step 2: Review Intelligence" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,8"/>
                                <TextBlock Text="• Examine the Quick Stats: Check if the target is online, response time, and detected security measures" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• Review Technology Stack: Identify the web server (Apache, Nginx), programming language (PHP, Python), and CMS (WordPress, Joomla)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• Check Open Ports: Look for vulnerable services running on ports like 22 (SSH), 3306 (MySQL), 21 (FTP)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                <TextBlock Text="Why this matters: Understanding the target's technology helps you choose the right attack vector and exploit." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Step 3: Select Attack Module" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,8"/>
                                <TextBlock Text="• For web applications: Use the Injection Testing module to test for SQL injection and file upload vulnerabilities" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• For stress testing: Use DDoS modules (HTTP Flood, SYN Flood, UDP Flood) to test server resilience" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                <TextBlock Text="Choose wisely: Different attacks work on different targets. Web apps are vulnerable to injection attacks, while servers can be stress-tested with DDoS." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource WarningBox}">
                            <StackPanel>
                                <TextBlock Text="⚠ Legal Warning" FontWeight="Bold" Foreground="#F0C800" FontSize="14" Margin="0,0,0,8"/>
                                <TextBlock Text="Only test systems you own or have explicit written permission to test. Unauthorized testing is illegal and can result in criminal charges. Always obtain proper authorization before conducting security assessments." Foreground="#F0C800" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- DASHBOARD -->
            <TabItem Header="Dashboard &amp; OSINT">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="35,25">
                    <StackPanel MaxWidth="750">
                        <TextBlock Text="Dashboard &amp; Intelligence Gathering" FontSize="24" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,10"/>
                        <TextBlock Text="Understanding reconnaissance and information gathering" Foreground="#8B949E" FontSize="13" Margin="0,0,0,20"/>

                        <TextBlock Text="Quick Stats Explained" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Status Indicator" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="Shows: Online ✓ or Offline ✗" Foreground="#C9D1D9" Margin="0,0,0,4"/>
                                <TextBlock Text="How it works: Sends an HTTP request to the target and checks if it receives a valid response (HTTP 200 OK)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="What it means: If online, the web server is accessible. If offline, the server might be down, blocking your IP, or behind a firewall." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Latency (Response Time)" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="Shows: Time in milliseconds (ms)" Foreground="#C9D1D9" Margin="0,0,0,4"/>
                                <TextBlock Text="How it works: Measures the round-trip time for a packet to reach the server and return (ping)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="What it means: Lower is better. &lt;50ms = Excellent, 50-100ms = Good, 100-200ms = Fair, &gt;200ms = Slow. High latency may indicate network congestion or geographical distance." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Open Ports" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="Shows: Number of accessible network ports" Foreground="#C9D1D9" Margin="0,0,0,4"/>
                                <TextBlock Text="Common ports:" Foreground="#C9D1D9" Margin="0,6,0,4"/>
                                <TextBlock Text="• Port 80 (HTTP): Unencrypted web traffic" Foreground="#C9D1D9" Margin="15,0,0,2"/>
                                <TextBlock Text="• Port 443 (HTTPS): Encrypted web traffic" Foreground="#C9D1D9" Margin="15,0,0,2"/>
                                <TextBlock Text="• Port 22 (SSH): Remote server access" Foreground="#C9D1D9" Margin="15,0,0,2"/>
                                <TextBlock Text="• Port 3306 (MySQL): Database server" Foreground="#C9D1D9" Margin="15,0,0,2"/>
                                <TextBlock Text="• Port 21 (FTP): File transfer protocol" Foreground="#C9D1D9" Margin="15,0,0,6"/>
                                <TextBlock Text="Security risk: More open ports = larger attack surface. Unnecessary ports should be closed." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="WAF Detection (Web Application Firewall)" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="Shows: Detected firewall (Cloudflare, AWS WAF, Akamai, etc.) or None" Foreground="#C9D1D9" Margin="0,0,0,4"/>
                                <TextBlock Text="How it works: Analyzes HTTP headers and response patterns to identify security products" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="What it means: A WAF actively blocks malicious requests. If detected, attacks may be filtered or blocked. You'll need advanced evasion techniques." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Technology Stack Analysis" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,20,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Why technology matters:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="• Server Software: Knowing if it's Apache, Nginx, or IIS helps identify version-specific vulnerabilities" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• CMS Detection: WordPress, Joomla, and Drupal have known plugin vulnerabilities" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• Programming Language: PHP, Python, Node.js each have different exploit techniques" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="• Framework: React, Angular, Laravel frameworks may expose API endpoints or have CSRF vulnerabilities" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                <TextBlock Text="Example: If WordPress 5.0 is detected, you can search for specific exploits for that version." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Domain Intelligence" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,20,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="DNS Records" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="• A Records: Maps domain to IP address" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="• MX Records: Email server information (useful for phishing campaigns)" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="• NS Records: Name servers (can reveal hosting provider)" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="• Subdomains: Hidden services like admin.example.com or dev.example.com" Foreground="#C9D1D9" Margin="0,0,0,6"/>
                                <TextBlock Text="Attack vector: Subdomains often have weaker security and can be entry points." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="WHOIS Information" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="Reveals: Domain registrar, creation date, expiration date, registrant contact" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="Social engineering: Contact information can be used for targeted phishing attacks." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="SSL Certificate Analysis" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="Checks: Certificate validity, issuer (Let's Encrypt, DigiCert), expiration date, encryption strength" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="Security indicator: Expired or self-signed certificates indicate poor security practices." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Email Security (SPF/DKIM/DMARC)" FontWeight="SemiBold" Foreground="#58A6FF" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="• SPF: Specifies which servers can send email for this domain" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="• DKIM: Cryptographic signature to verify email authenticity" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="• DMARC: Policy for handling failed authentication" Foreground="#C9D1D9" Margin="0,0,0,6"/>
                                <TextBlock Text="Phishing risk: Missing records mean emails can be easily spoofed from this domain." Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- DDOS ATTACKS -->
            <TabItem Header="DDoS Attacks">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="35,25">
                    <StackPanel MaxWidth="750">
                        <TextBlock Text="DDoS Attack Modules" FontSize="24" FontWeight="Bold" Foreground="#58A6FF" Margin="0,0,0,10"/>
                        <TextBlock Text="Understanding Distributed Denial of Service attacks" Foreground="#8B949E" FontSize="13" Margin="0,0,0,20"/>

                        <Border Style="{StaticResource WarningBox}">
                            <StackPanel>
                                <TextBlock Text="⚠ Use Responsibly" FontWeight="Bold" Foreground="#F0C800" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="DDoS attacks can cause service disruption and financial damage. Only use on systems you own or have explicit permission to test. Unauthorized DDoS attacks are serious crimes." Foreground="#F0C800" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="HTTP Flood (Layer 7 Attack)" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,20,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="What it does:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="Floods the target web server with HTTP GET or POST requests, overwhelming the server's ability to process legitimate traffic. This exhausts CPU, RAM, and bandwidth resources." Foreground="#C9D1D9" TextWrapping="Wrap" LineHeight="22" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="How it works:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="1. Creates multiple threads (concurrent connections)" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="2. Each thread continuously sends HTTP requests to the target" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="3. Server must process each request, consuming resources" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="4. Legitimate users cannot access the site due to resource exhaustion" Foreground="#C9D1D9" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Parameters explained:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Threads: Number of simultaneous connections (e.g., 100 threads = 100 concurrent requests)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="  → Higher threads = More load on server" Foreground="#8B949E" Margin="15,0,0,4"/>
                                <TextBlock Text="  → Recommended: Start with 50, increase to 200+ for powerful servers" Foreground="#8B949E" Margin="15,0,0,8"/>
                                
                                <TextBlock Text="• Timeout: How long to wait for server response before sending next request (in seconds)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="  → Lower timeout = Faster request cycling = More aggressive attack" Foreground="#8B949E" Margin="15,0,0,4"/>
                                <TextBlock Text="  → Recommended: 1-3 seconds for normal attacks, 0.5 seconds for aggressive" Foreground="#8B949E" Margin="15,0,0,10"/>
                                
                                <TextBlock Text="Target selection:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Most effective against: Small to medium web servers, shared hosting, unprotected sites" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,2"/>
                                <TextBlock Text="• Less effective against: CDN-protected sites (Cloudflare), large enterprise servers, load-balanced infrastructure" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Signs of success: Website becomes slow or unresponsive, HTTP 503 errors, timeout errors" Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="SYN Flood (Layer 4 Attack)" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,20,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="What it does:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="Exploits the TCP handshake process by sending SYN packets without completing the connection. This fills up the server's connection table, preventing legitimate connections." Foreground="#C9D1D9" TextWrapping="Wrap" LineHeight="22" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="TCP Handshake explained:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="Normal connection: Client sends SYN → Server responds SYN-ACK → Client sends ACK (3-way handshake)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="SYN Flood: Client sends SYN → Server responds SYN-ACK → Client never sends ACK (half-open connection)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="Result: Server keeps waiting for ACK, wasting connection slots" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Parameters explained:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Packet Size: Size of the SYN packet payload in bytes" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="  → Larger packets consume more bandwidth" Foreground="#8B949E" Margin="15,0,0,4"/>
                                <TextBlock Text="  → Recommended: 64-1024 bytes" Foreground="#8B949E" Margin="15,0,0,10"/>
                                
                                <TextBlock Text="Target selection:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Most effective against: Servers with limited connection tables, older network equipment" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,2"/>
                                <TextBlock Text="• Less effective against: Modern servers with SYN cookies enabled, hardware firewalls" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Note: Requires raw socket access (administrator privileges on Windows)" Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="UDP Flood (Layer 4 Attack)" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,20,0,12"/>
                        
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="What it does:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="Sends large volumes of UDP packets to random ports on the target. The server must check each port for listening applications and send ICMP 'Destination Unreachable' responses, consuming bandwidth and processing power." Foreground="#C9D1D9" TextWrapping="Wrap" LineHeight="22" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="How it works:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="1. Sends UDP packets to random ports (1-65535)" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="2. Server checks if any application is listening on that port" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="3. If no application, server sends ICMP error message back" Foreground="#C9D1D9" Margin="0,0,0,2"/>
                                <TextBlock Text="4. This process consumes bandwidth and CPU resources" Foreground="#C9D1D9" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Target selection:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Most effective against: Game servers, VoIP services, DNS servers (all use UDP)" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,2"/>
                                <TextBlock Text="• Less effective against: Web servers (primarily use TCP), rate-limited networks" Foreground="#C9D1D9" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Advantage: UDP is connectionless, so no handshake required = faster attack" Foreground="#8B949E" TextWrapping="Wrap" FontStyle="Italic" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Text="Defense Mechanisms You Might Encounter:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                                <TextBlock Text="• Rate Limiting: Server limits requests per IP address" Foreground="#C9D1D9" Margin="0,0,0,2"/>
