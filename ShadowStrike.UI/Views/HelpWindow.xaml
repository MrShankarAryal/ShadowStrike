                                <TextBlock Text="• Quick preview of key findings" Foreground="#C9D1D9" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Sorting: Most recent scans appear first" Foreground="#8B949E" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBox}">
