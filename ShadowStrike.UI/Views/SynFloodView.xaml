<UserControl x:Class="ShadowStrike.UI.Views.SynFloodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#0D1117">
        <StackPanel Margin="40">
            <TextBlock Text="ðŸ”¥ SYN Flood Attack" FontSize="28" FontWeight="Light" Margin="0,0,0,30" Foreground="White"/>

            <!-- Configuration Card -->
            <Border Background="#0D1117" CornerRadius="8" Padding="30" Margin="0,0,0,30" BorderBrush="#00AAFF" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="ATTACK CONFIGURATION" FontWeight="Bold" Foreground="#00AAFF" Margin="0,0,0,20"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Target IP" Foreground="#AABBCC" Margin="0,0,0,5"/>
                            <TextBox x:Name="IpInput" FontSize="16" materialDesign:HintAssist.Hint="Target IP Address" Foreground="White" CaretBrush="White" Background="#151921"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Port" Foreground="#AABBCC" Margin="0,0,0,5"/>
                            <TextBox x:Name="PortInput" FontSize="16" materialDesign:HintAssist.Hint="Port (e.g. 80)" Foreground="White" CaretBrush="White" Background="#151921"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Concurrency (Threads)" Foreground="#AABBCC" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="ThreadSlider" 
                                Minimum="10" 
                                Maximum="5000" 
                                Value="100" 
                                TickFrequency="100"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,20,0"
                                Foreground="#00AAFF"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ElementName=ThreadSlider, Path=Value}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Right"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Grid>

                    <!-- Attack Duration -->
                    <TextBlock Text="Attack Duration (seconds, 0 = unlimited)" Foreground="#AABBCC" Margin="0,20,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="DurationSlider" 
                                Minimum="0" 
                                Maximum="300" 
                                Value="0" 
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,20,0"
                                Foreground="#00AAFF"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ElementName=DurationSlider, Path=Value}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Right"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Grid>
                    
                    <Button x:Name="AttackBtn" 
                            Content="LAUNCH ATTACK" 
                            Height="50" 
                            Margin="0,30,0,0"
                            Click="AttackBtn_Click"
                            Background="#00AAFF"
                            Foreground="White"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </Border>

            <!-- Stats Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#0D1117" CornerRadius="8" Height="150" Padding="20" BorderBrush="#00AAFF" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="PACKETS SENT" Foreground="#00AAFF" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="PacketsText" Text="0" FontSize="36" Foreground="#00AAFF" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#0D1117" CornerRadius="8" Height="150" Padding="20" BorderBrush="#00FF88" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="STATUS" Foreground="#00FF88" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" Text="IDLE" FontSize="24" Foreground="#00FF88" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
