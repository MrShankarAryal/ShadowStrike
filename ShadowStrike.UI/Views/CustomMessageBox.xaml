<Window x:Class="ShadowStrike.UI.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Message" Height="200" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#0D1117" CornerRadius="8,8,0,0" BorderBrush="#30363D" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="TitleText" Text="Title" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <Button Click="Close_Click" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignFlatButton}" Width="30" Height="30" Padding="0" Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="Close" Foreground="#8B949E"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20">
                <materialDesign:PackIcon x:Name="MessageIcon" Kind="Information" Width="32" Height="32" Foreground="#58A6FF" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <TextBlock x:Name="MessageText" Text="Message content goes here..." Foreground="#C9D1D9" TextWrapping="Wrap" VerticalAlignment="Center" Width="330" FontSize="14"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0">
                <Button x:Name="CancelButton" Content="Cancel" Click="Cancel_Click" Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="#C9D1D9" BorderBrush="#30363D" Margin="0,0,10,0" Visibility="Collapsed"/>
                <Button x:Name="OkButton" Content="OK" Click="Ok_Click" Style="{StaticResource MaterialDesignFlatButton}" Background="#238636" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
