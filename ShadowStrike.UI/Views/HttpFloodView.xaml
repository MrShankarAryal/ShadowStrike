<UserControl x:Class="ShadowStrike.UI.Views.HttpFloodView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#0D1117">
        <StackPanel Margin="40">
            <TextBlock Text="âš¡ HTTP Flood Attack" FontSize="28" FontWeight="Light" Margin="0,0,0,30"
                Foreground="White" />

            <!-- Configuration Card -->
            <Border Background="#0D1117" CornerRadius="8" Padding="30" Margin="0,0,0,30"
                BorderBrush="#00AAFF" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="ATTACK CONFIGURATION" FontWeight="Bold" Foreground="#00AAFF"
                        Margin="0,0,0,20" />

                    <TextBlock Text="Target URL" Foreground="#AABBCC" Margin="0,0,0,5" />
                    <TextBox x:Name="TargetInput"
                        FontSize="16"
                        Margin="0,0,0,20"
                        materialDesign:HintAssist.Hint="Target URL (e.g., https://example.com)"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Foreground="White"
                        CaretBrush="White"
                        Background="#151921" />

                    <!-- Attack Mode Selector (Removed - Volumetric Mode Deprecated) -->
                    <!-- <TextBlock Text="Attack Mode" Foreground="#AABBCC" Margin="0,0,0,5"/> -->
                    <!-- <ComboBox ... /> -->

                    <TextBlock Text="Concurrency (Threads/Browsers)" Foreground="#AABBCC"
                        Margin="0,0,0,10" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="ThreadSlider"
                            Minimum="10"
                            Maximum="100"
                            Value="10"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            Margin="0,0,20,0"
                            Foreground="#00AAFF" />
                        <TextBlock Grid.Column="1"
                            Text="{Binding ElementName=ThreadSlider, Path=Value}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White" />
                    </Grid>

                    <!-- Tor Status -->
                    <TextBlock x:Name="TorStatusText"
                        Text="Tor: Initializing..."
                        Foreground="#888"
                        FontSize="12"
                        Margin="0,20,0,10" />

                    <!-- Attack Duration -->
                    <TextBlock Text="Attack Duration (seconds, 0 = unlimited)" Foreground="#AABBCC"
                        Margin="0,20,0,10" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="DurationSlider"
                            Minimum="0"
                            Maximum="50000"
                            Value="0"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            Margin="0,0,20,0"
                            Foreground="#00AAFF" />
                        <TextBlock Grid.Column="1"
                            Text="{Binding ElementName=DurationSlider, Path=Value}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White" />
                    </Grid>

                    <!-- Bypass Controls (Removed - Integrated into Attack) -->

                    <Button x:Name="AttackBtn"
                        Content="LAUNCH ATTACK"
                        Height="50"
                        Margin="0,30,0,0"
                        Click="AttackBtn_Click"
                        Background="#00AAFF"
                        Foreground="White"
                        BorderThickness="0"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                            From="0.8" To="1.0" Duration="0:0:1"
                                            AutoReverse="True" RepeatBehavior="Forever" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Stats Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Requests Sent -->
                <Border Grid.Column="0" Background="#0D1117" CornerRadius="8" Height="150"
                    Padding="20" BorderBrush="#00AAFF" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="REQUESTS SENT" Foreground="#00AAFF" FontWeight="Bold"
                            HorizontalAlignment="Center" />
                        <TextBlock x:Name="RequestsText" Text="0" FontSize="36" Foreground="#00AAFF"
                            HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </Border>

                <!-- Failed -->
                <Border Grid.Column="2" Background="#0D1117" CornerRadius="8" Height="150"
                    Padding="20" BorderBrush="#FF4444" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="FAILED" Foreground="#FF4444" FontWeight="Bold"
                            HorizontalAlignment="Center" />
                        <TextBlock x:Name="FailedText" Text="0" FontSize="36" Foreground="#FF4444"
                            HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Grid.Column="4" Background="#0D1117" CornerRadius="8" Height="150"
                    Padding="20" BorderBrush="#00FF88" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="STATUS" Foreground="#00FF88" FontWeight="Bold"
                            HorizontalAlignment="Center" />
                        <TextBlock x:Name="StatusText" Text="IDLE" FontSize="24"
                            Foreground="#00FF88" HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>